<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dip"
    android:orientation="horizontal"
    android:weightSum="11"
    android:padding="10dip"
    android:background="@color/grey"
    android:id="@+id/layout_item_author_like">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:background="@color/white">
    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="3">
        <de.hdodenhof.circleimageview.CircleImageView
            android:padding="5dip"
            android:id="@+id/img_like_author_userImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/yeoni"
            />

    </LinearLayout>

   <LinearLayout
       android:layout_width="0dip"
       android:layout_height="match_parent"
       android:layout_weight="6"
       android:paddingLeft="10dip"
       android:orientation="vertical"
       android:gravity="center_vertical">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="여니여니"
           android:textSize="20dip"
           android:id="@+id/txt_like_author_userName"
           android:textStyle="bold"
           android:paddingBottom="8dip"/>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:paddingBottom="3dip">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="work "/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:id="@+id/txt_like_author_workCount"
               android:text="13"/>
       </LinearLayout>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="이거슨 칭호이니라~~~~"
           android:maxLines="1"
           android:ellipsize="end"
           android:id="@+id/txt_like_author_title"/>
   </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_heart"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="324"
            android:textAlignment="center"
            android:id="@+id/txt_like_author_likeNum"/>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>
