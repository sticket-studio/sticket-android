<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_sticker_image"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_margin="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/item_sticker_status"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/img_download3"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/item_sticker_image"
        app:layout_constraintEnd_toEndOf="@+id/item_sticker_image"
        app:layout_constraintStart_toEndOf="@+id/item_sticker_image"
        app:layout_constraintTop_toBottomOf="@+id/item_sticker_image" />

</android.support.constraint.ConstraintLayout>